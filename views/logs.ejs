<!DOCTYPE html>
<html>
<head>
  <title>PM2 Logs</title>
  <style>
    body {
      font-family: monospace;
    }
    .log-container {
      font-family: monospace;
      background-color: #1e1e1e;
      color: #ffffff;
      padding: 10px;
      margin: 10px;
      border-radius: 5px;
      max-height: 400px;
      overflow-y: auto;
    }
    .log-line {
      white-space: pre-wrap;
    }
  </style>
</head>
<body>
  <h1>PM2 Logs</h1>
  <div class="log-container" id="log-container"></div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const logContainer = document.getElementById('log-container');

    socket.on('log', (logLine) => {
      const logLineElement = document.createElement('div');
      logLineElement.classList.add('log-line');
      logLineElement.textContent = logLine;
      logContainer.appendChild(logLineElement);
      logContainer.scrollTop = logContainer.scrollHeight; // Scroll to the bottom
    });
  </script>
</body>
</html>
