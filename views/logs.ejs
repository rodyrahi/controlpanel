<!DOCTYPE html>
<html>
<head>
  <title>PM2 Logs</title>
  <!-- Add these lines in the <head> section of your EJS template -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</head>


<style>
    body {
      font-family: monospace;
    }
    .log-container {
      font-family: monospace;
      background-color: #1e1e1e;
      color: #ffffff;
      padding: 10px;
      margin: 10px;
      border-radius: 5px;
      max-height: 400px;
      overflow-y: auto;
    }
    .log-line {
      white-space: pre-wrap;
    }
  </style>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">PM2 Logs</h1>
    <div class="card">
      <div class="card-body">
        <pre id="log-container" class="card-text"></pre>
      </div>
    </div>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    const logContainer = document.getElementById('log-container');

    socket.on('log', (logLine) => {
      logContainer.textContent += logLine + '\n';
      logContainer.scrollTop = logContainer.scrollHeight; // Scroll to the bottom
    });
  </script>
</body>
</html>
