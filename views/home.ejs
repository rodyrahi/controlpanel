<%- include('./partials/header.ejs') %>

<style>
    .img {
        width: 100%;
        height: 40vh;
        text-align: center;
        color: rgb(0, 0, 0);
        transition: color 0.5s; /* Add a transition effect for color change */
        overflow: hidden;
        position: relative;
        
        background-repeat: no-repeat;
    }

    .img:hover {
        color: rgb(3, 132, 172); /* Change the text color on hover */
    }

    .animated-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, #FF5733, #33FFBD, #3333FF, #FF33FF, #33FF33, #FFD033); /* Define your gradient colors here */
        background-size: 600% 600%;
        animation: animatedBackground 10s linear infinite;
        opacity: 0.2; /* Adjust the duration and timing function as needed */
    }

    @keyframes animatedBackground {
        0% {
            background-position: 100% 0;
        }
        100% {
            background-position: -100% 0;
        }
    }

    h2, h4 {
        margin: 0;
        transition: transform 0.5s; /* Add a transition effect for transform (e.g., scale) */
    }

    .img:hover h2, .img:hover h4 {
        transform: scale(1.2); /* Scale the text on hover */
    }
    /* CSS for button animation */
     .animate-button {
    transition: transform 0.2s ease-in-out, background-color 0.2s ease-in-out;
}

     .animate-button:hover {
    transform: scale(1.1); /* Increase the button size on hover */
    background-color: #007BFF; /* Change the background color on hover */
    color: white; /* Change the text color on hover */
}

    
</style>

