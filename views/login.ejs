                <label for "username" class="form-label">Username:</label>
                <input type="text" name="username" value="root" id="username" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password:</label>
                <input type="password" name="password" value="kamingoconsultancy@69" id="password" class="form-control" required>
            </div>
