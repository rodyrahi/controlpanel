<body style="background-color: currentColor;">

    <div class="container">
     


        <h1 class="text-light" >Server Status</h1>
        <form  id="form">
            <div class="row" id="apps">


     
            <% result.forEach(element => { %>

                
                <div class="col" style="max-width: 22rem; min-width: 22rem;">
                  <div class=" row m-1 p-2 shadow text-light" style="background-color: darkslategray; border-radius: 1rem;">

                    <div class="col-6">
                      <h5 class="fw-bold"><%= element.name %></h5>
                      <a class=" ms-auto ms-2 text-warning" type="button" data-cmd="restart" data-name="<%= element.name %>" onclick="app(this)"><i class="fa-solid fa-rotate" style="font-size: 1.5rem;"></i></a>
                      <% if (element.pm2_env.status === 'online') { %>
                      <a class=" ms-1 text-danger ms-2" type="button" data-cmd="stop" data-name="<%= element.name %>" onclick="app(this)"><i class="fa-solid fa-stop" style="font-size: 1.5rem;"></i></a>

                      <% } else { %>
                      <a class=" ms-1 text-success ms-2" type="button" data-cmd="start" data-name="<%= element.name %>" onclick="app(this)"><i class="fa-solid fa-play" style="font-size: 1.5rem;"></i></a>

                      <%} %>
                      <% if (element.pm2_env.versioning) { %>
                      <a type="button" class="text-info ms-2" data-cmd="<%= element.pm2_env.versioning.repo_path %>" data-name="<%= element.name %>" onclick="gitpull(this)"><i class="fa-solid fa-code-pull-request" style="font-size: 1.5rem;"></i></a>

                      <% } %>
                      <i class="fa-solid fa-code text-info ms-2" hx-get="/log/<%= element.name %>" hx-trigger="click" hx-target="#log-container"></i>
                      <!-- <a target="_blank"  href="/logs/<%= element.name %>" class="text-info ms-2"><i class="fa-solid fa-code"></i></a> -->

                    </div>
                    <div class="col-6 d-flex" style="flex-direction: column;">
                      <h6 class="ms-auto"><i class="fa-solid fa-microchip me-2"></i><%= (element.monit.memory /1024/1024).toFixed(2) %>mb</h6>
                      <h6 class="ms-auto"><i class="fa-solid fa-server me-2"> </i><%= element.monit.cpu %>%</h6>

                      
                      
                    </div>

                  </div>
                </div>
               

            <% }) %>
            </div>
  
            <hr>
            
            <input type="text" name="giturl" id="giturl" placeholder="Enter a git url">
            <button class="btn btn-success btn-sm" onclick="addapp()" type="button" id="">ADD APP</button>
            <hr>
            <div id="log-container" class="text-light  rounded border p-3" style="background-color: black;"></div>


            <hr>
            <textarea class="form-control text-light" name="command" id="command" cols="30" rows="10" style="background-color: black;" ></textarea>
            <!-- <input type="text" name="command" id="command" placeholder="Enter a command"> -->
            <button class="btn btn-light btn-sm mt-2" type="submit"  hx-post="/cmd" id="exe" hx-target="#log-container">Execute Command</button>

        </form>
        <!-- <a class="btn btn-light btn-sm mt-2" href="/logs">View logs</a> -->

        <hr>
