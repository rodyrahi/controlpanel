                <%- include('./partials/sidenav.ejs') %>

            </div>
        </div>
    
    
      </div>





      

    <div class="container">
    
        <nav class="navbar p-0 navbar-expand-lg navbar-light bg-white" style="font-family: 'Rubik', sans-serif;">
