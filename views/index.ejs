    <style>
        .output-terminal {
            background-color: #000;
            color: #fff;
            font-family: "Courier New", monospace;
            padding: 10px;
            border: 1px solid #333;
        }


        .folder{
            cursor: pointer;
        }

        .btn{
            background-color: #2F4F4F;
            border-radius: 2rem;
            border: none;
            box-shadow: 4px 4px #2a2a2a;
        }
