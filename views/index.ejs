<style>
    .side-panel {
        position: fixed;
        top: 0;
        bottom: 0;
        right: -250px; /* Initial position, off-screen */
        z-index: 1030;
        width: 250px;
        background-color: #fff; /* Change the background color as needed */
        transition: all 0.3s;
    }
    .side-panel.active {
        right: 0; /* Slide in when active */
    }
    #main-content {
        transition: margin-right 0.3s;
    }

</style>

<style>
