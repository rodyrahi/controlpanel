<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SSH Web Interface</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://unpkg.com/htmx.org@1.9.6"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        .output-terminal {
            background-color: #000;
            color: #fff;
            font-family: "Courier New", monospace;
            padding: 10px;
            border: 1px solid #333;
        }


        .folder{
            cursor: pointer;
        }

        .btn{
            background-color: #2F4F4F;
            border-radius: 2rem;
            border: none;
            box-shadow: 4px 4px #2a2a2a;
        }
        /* .list-group .list-group-item{
            border: none;
        } */
    </style>
</head>
<body >
    <div class="container">
        <%- include('./partials/navbar.ejs') %>


        <!-- <h1 class="mb-4">SSH Web Interface</h1> -->
        <form id="sshForm" style="display: none;" class="mb-4">

            <div class="mb-3">
                <label for="command" class="form-label">Command:</label>

                <textarea class="form-control text-light" name="command" id="command" cols="30" rows="10" style="background-color: black;" ></textarea>
                <!-- <input type="text" name="command" id="command" placeholder="Enter a command"> -->
              
              
                <!-- <input type="text" name="command" id="command" class="form-control" required> -->
            </div>
            <button class="btn btn-light btn-sm mt-2" type="submit"  hx-post="/execute" id="exe" hx-target="#output">Execute Command</button>

        </form>



        <div class="row"  >
            <div class="col-md-2 p-2">
                <ul class="list-group">
                    <li class="list-group-item"><a class="btn btn-primary " hx-get="/status" hx-target="#home" ><i class="fa-solid fa-house"></i> Home</a></li>
                    <li class="list-group-item "> <a class="btn btn-primary" hx-get="/apps" hx-target="#home" id="apps"   ><i class="fa-solid fa-laptop-code"></i> Apps</a> </li>
                    <li class="list-group-item "> <a class="btn btn-primary" hx-get="/gitrepos" hx-target="#home" id="folder" onclick="resetpath()" ><i class="fa-solid fa-folder"></i> Folders</a> </li>
                    
                    <li class="list-group-item "> <a class="btn btn-primary" hx-get="/scripts" hx-target="#home" id="folder"  ><i class="fa-solid fa-gear"></i> Scripts</a> </li>

                    <li class="list-group-item "> 
                        <a class="btn btn-primary" hx-get="/website" hx-target="#home">
                        <i class="fa-solid fa-globe"></i> Website
                        </a> 
                    </li>

                    <li class="list-group-item "> <a class="btn btn-primary" hx-get="/gitrepos" hx-target="#home"   ><i class="fa-solid fa-database"></i> SQLite3</a> </li>

                </ul>
            </div>
            <div class="col-md-10 border  mt-2 rounded-2" id="home"  >
               
                 

                <%- include('./partials/status.ejs') %>



            </div>
        </div>


    </div>

    <script>
           var path = '/root/app/';
           function resetpath() {
            
            path= '/root/app/';
           }
    </script>
</body>
</html>
